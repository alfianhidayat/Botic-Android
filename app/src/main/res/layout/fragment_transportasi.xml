<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bojonegorotic.amrizalns.botic.fragment.transportasi"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        >
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/banner_transportasi"
            />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_below="@id/header"
        android:id="@+id/tablayout_transportasi"
        android:orientation="horizontal"
        app:tabGravity="fill"
        style="@style/MyCustomTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/tablayout_transportasi"
        android:id="@+id/vp_transportasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>
