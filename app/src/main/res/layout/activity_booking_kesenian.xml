<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bojonegorotic.amrizalns.botic.activity.booking_kesenian"
    android:background="@color/colorBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banner"
        >
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/banner_sk_kesenian"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sc"
        android:layout_below="@id/banner"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:paddingBottom="30dp"
        >

        <LinearLayout
            android:id="@+id/booking_gedung_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:layout_below="@+id/banner">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:text = "Data pemesan"
                android:textColor="@color/colorContent"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/field_no_identitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:hint="@string/nomor_indentitas"
                android:textSize="14sp"
                android:maxLines="1"
                android:textCursorDrawable="@color/colorContent"
                android:textColorHint="@color/colorContent"
                android:backgroundTint="@color/colorContent"
                android:textColor="@color/colorContent"
                android:singleLine="true"
                android:ellipsize="end"
                android:inputType="numberDecimal"
                android:maxLength="16"
                />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/field_number_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:hint="@string/nomor_telepon"
                android:textSize="14sp"
                android:maxLines="1"
                android:textCursorDrawable="@color/colorContent"
                android:textColorHint="@color/colorContent"
                android:backgroundTint="@color/colorContent"
                android:textColor="@color/colorContent"
                android:singleLine="true"
                android:ellipsize="end"
                android:inputType="numberDecimal"
                />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/field_desc_kesenian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:hint="@string/deskripsi_kegiatan"
                android:textSize="14sp"
                android:maxLines="10"
                android:textCursorDrawable="@color/colorContent"
                android:textColorHint="@color/colorContent"
                android:backgroundTint="@color/colorContent"
                android:textColor="@color/colorContent"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="1000"
                android:inputType="textMultiLine"
                />
            <LinearLayout
                android:id="@+id/place_kesenian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginStart="50dp"
                    android:gravity="left"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jenis_kesenian"
                        android:textColor="@color/colorContent"
                        android:textSize="14sp"
                        />
                    <android.support.v7.widget.AppCompatSpinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/jenis_kesenian"

                        >

                    </android.support.v7.widget.AppCompatSpinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_gedung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginStart="50dp"
                    android:gravity="start"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tanggal_pesan"
                        android:textColor="@color/colorContent"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/txt_date"
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="@string/dd_mm_yyyy"
                        android:textColor="@color/colorContent"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"

                    >
                    <ImageButton
                        android:id="@+id/btn_date"
                        android:background="@drawable/btn_set_act"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_event"
                        android:padding="5dp"
                        android:layout_marginStart="30dp"
                        android:onClick="datePicker"
                        />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btn_next_kesenian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAllCaps="false"
                android:text="@string/selesaikan_pemesanan"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/btn_set_act" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
