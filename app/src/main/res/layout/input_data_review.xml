<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    android:background="@color/cardView"
    >

    <TextView
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Review"
        android:textSize="16sp"
        android:textColor="@color/colorContent"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/colorContent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/separator2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <EditText
            android:id="@+id/tambah_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Review"
            android:maxLines="500"
            android:textSize="14sp"
            android:inputType="text"
            android:textColor="@color/colorContent"
            android:textColorHint="@color/colorContent"
            android:textCursorDrawable="@color/colorContent"
            android:backgroundTint="@color/colorContent"

        />
        <RatingBar
            android:id="@+id/rb_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            android:theme="@style/RatingBar"
            android:progressBackgroundTint="@color/colorContent"
            />
    </LinearLayout>
</LinearLayout>